<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Practica3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Practica3"
    Shell.FlyoutBehavior="Flyout"
    Title="Practica3">
    
    <FlyoutItem Title="Inicio">
        <ShellContent
    Title="Inicio"
    ContentTemplate="{DataTemplate local:MainPage}"
    Route="MainPage" />
    </FlyoutItem>
    <FlyoutItem Title="Galerias Personalizadas">
        <ShellContent
        Title="Galeria Personalizada"
        ContentTemplate="{DataTemplate local:GaleriaPersonalizadaPage}"
        Route="GaleriaPersonalizadaPage" />
    </FlyoutItem>
    <FlyoutItem Title="Galeria">
        <ShellContent
        Title="Galeria"
        ContentTemplate="{DataTemplate local:GaleriaPage}"
        Route="GaleriaPage" />
    </FlyoutItem>
    <FlyoutItem Title="Crear Galeria">
        <ShellContent
        Title="Crear Galeria"
        ContentTemplate="{DataTemplate local:CrearGaleriaPage}"
        Route="CrearGaleriaPage" />
    </FlyoutItem>
    <FlyoutItem Title="Configuración">
        <ShellContent
        Title="Configuración"
        ContentTemplate="{DataTemplate local:Configuracion}"
        Route="MainPage" />
    </FlyoutItem>
    <ShellContent
        Title="Unicornio"
        ContentTemplate="{DataTemplate local:NewPage1}"
        Route="NewPage1" />
    <ShellContent
        Title="Fenrir"
        ContentTemplate="{DataTemplate local:NewPage2}"
        Route="NewPage2" />
    <ShellContent
        Title="Fenix"
        ContentTemplate="{DataTemplate local:NewPage3}"
        Route="NewPage3" />
    <ShellContent
        Title="Dragón"
        ContentTemplate="{DataTemplate local:NewPage4}"
        Route="NewPage4" />

</Shell>
